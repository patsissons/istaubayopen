{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": [
        "src/*"
      ],
      "*": [
        "types/*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
  },
  "include": [
    "./src/**/*"
  ]
}
